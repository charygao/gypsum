import std.Option, Some, None


def add-string(opt: Option[String], suffix: String) =
  match (opt)
    case Some[Object](prefix: String) => Some[String](prefix + suffix)
    case None => None

def main =
  let foobar = add-string(Some[String]("foo"), "bar").get
  if (foobar != "foobar")
    throw Exception()

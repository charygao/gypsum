class List(n: i64, next: List?)
  def sum =
    var sum = 0
    var current: List? = this
    while (current !== null)
      sum += current.n
      current = current.next
    sum

def make-list(var n: i64) =
  var list: List? = null
  while (n > 0)
    list = List(n, list)
    n -= 1
  list

def main =
  let list = make-list(7)
  let sum = list.sum
  if (sum != 28)
    throw Exception()
  0

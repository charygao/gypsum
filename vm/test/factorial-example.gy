def factorial-iterative(var n: i64) =
  var p = 1
  while (n > 0)
    p *= n
    n -= 1
  p


def factorial-recursive(n: i64): i64 =
  if (n == 0)
    1
  else
    n * factorial-recursive(n - 1)


def main =
  let n = 5
  if (120 != factorial-iterative(n))
    throw Exception()
  if (120 != factorial-recursive(n))
    throw Exception()
